<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.firda.secondlife">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".StartActivity">

        </activity>
        <activity android:name=".SetupActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".ExampleIntentService" />
        <service android:name=".ExampleService"/>
        <receiver android:name=".StopBroadcastReceiver" android:exported="false">
            <intent-filter>
                <action android:name="MY_ACTIONn"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".PlayBroadcastReceiver" android:exported="false">
            <intent-filter>
                <action android:name="PLAY_ACTION"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".PauseBroadcastReceiver" android:exported="false">
            <intent-filter>
                <action android:name="PAUSE_ACTION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>